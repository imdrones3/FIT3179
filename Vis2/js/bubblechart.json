{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": "container",
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/imdrones3/FIT3179/main/Vis2/data/universities.csv"
  },
  "params": [
    {
      "name": "Total_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 41000,
        "step": 400,
        "name": "Minimum total: "
      }
    },
    {
      "name": "state_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "NSW",
          "VIC",
          "QLD",
          "WA",
          "SA",
          "TAS",
          "NT",
          "ACT",
          "Multistate"
        ],
        "labels": [
          "Show All",
          "New South Wales",
          "Victoria",
          "Queensland",
          "Western Australia",
          "South Australia",
          "Tasmania",
          "Northern Territory",
          "Australian Capital Territory",
          "Multistate"
        ],
        "name": "State/Territory Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.total > Total_Above"},
    {"filter": "state_selection == null || datum.state == state_selection"}
  ],
  "encoding": {
    "x": {
      "field": "onshore",
      "type": "quantitative",
      "title": "Onshore Students",
      "axis": {"tickCount": 7},
      "scale": {"domain": [0, 30000]}
    },
    "y": {
      "field": "offshore",
      "type": "quantitative",
      "title": "Offshore Students",
      "axis": {"tickCount": 7},
      "scale": {"domain": [0, 16000]}
    }
  },
  "layer": [
    {
      "selection": {
        "continent_highlight": {
          "type": "multi",
          "fields": ["state"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "color": {
          "field": "state",
          "type": "nominal",
          "scale": {
            "domain": [
              "NSW",
              "VIC",
              "QLD",
              "WA",
              "SA",
              "TAS",
              "NT",
              "ACT",
              "Multistate"
            ],
            "range": [
              "#cab2d6",
              "#ff7f00",
              "#fdbf6f",
              "#e31a1c",
              "#fb9a99",
              "#33a02c",
              "#b2df8a",
              "#1f78b4",
              "#a6cee3"
            ]
          }
        },
        "opacity": {
          "condition": {"selection": "continent_highlight", "value": 0.8},
          "value": 0.2
        },
        "size": {
          "field": "total",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000, 5000, 7500, 15000, 30000],
            "range": [50, 100, 200, 400, 800, 1600]
          }
        },
        "tooltip": [
          {"field": "university", "title": "University", "type": "nominal"},
          {
            "field": "total",
            "title": "Total International Students",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "onshore",
            "title": "Onshore Students",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "offshore",
            "title": "Offshore Students",
            "type": "quantitative",
            "format": ","
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "bottom",
        "dx": -57,
        "dy": -16,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "university", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['university'] == 'Monash University' || datum['university'] == 'The University of Melbourne'",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ],
  "config": {}
}