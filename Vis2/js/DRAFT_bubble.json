{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 500,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/imdrones3/FIT3179/main/Vis2/data/draft_bubbleplot.csv"
  },
  "params": [
    {
      "name": "Population_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 40000,
        "step": 500,
        "name": "Minimum total (thousands): "
      }
    }
  ],
  "transform": [{"filter": "datum.total > Population_Above > 0"}],
  "encoding": {
    "x": {
      "field": "offshore",
      "type": "quantitative",
      "title": "Overseas Full-time Load - offshore"
    },
    "y": {
      "field": "onshore",
      "type": "quantitative",
      "title": "Overseas Full-time Load - onshore"
    }
  },
  "layer": [
    {
      "selection": {
        "continent_highlight": {
          "type": "multi",
          "fields": ["university"],
          "bind": "legend"
        }
      },
      "mark": "circle",
      "encoding": {
        "color": {"field": "university", "type": "nominal"},
        "opacity": {
          "condition": {"selection": "continent_highlight", "value": 0.8},
          "value": 0.2
        },
        "size": {
          "field": "total",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [1000, 3000, 5000, 10000],
            "range": [100, 500, 1000, 1500, 2000]
          }
        },
        "tooltip": [
          {"field": "university", "type": "nominal"},
          {
            "field": "total",
            "title": "total (thousands)",
            "type": "quantitative",
            "format": ","
          },
          {"field": "Male", "type": "quantitative", "format": ","},
          {"field": "Female", "type": "quantitative", "format": ","},
          {
            "field": "Actual_Load",
            "title": "Actual Load",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "offshore",
            "title": "Overseas Males per 1000 total",
            "type": "quantitative",
            "format": ".3s"
          },
          {
            "field": "onshore",
            "title": "Overseas Females per 1000 total",
            "type": "quantitative",
            "format": ".3s"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -16,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "university", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['university'] == 'Victoria' || datum['university'] == 'Queensland' || datum['university'] == 'South Australia'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "university", "type": "nominal"},
          {
            "field": "total",
            "title": "total (thousands)",
            "type": "quantitative",
            "format": ","
          },
          {"field": "Male", "type": "quantitative", "format": ","},
          {"field": "Female", "type": "quantitative", "format": ","},
          {
            "field": "Actual_Load",
            "title": "Actual Load",
            "type": "quantitative",
            "format": ","
          },
          {
            "field": "offshore",
            "title": "Overseas Males per 1000 total",
            "type": "quantitative",
            "format": ".3s"
          },
          {
            "field": "onshore",
            "title": "Overseas Females per 1000 total",
            "type": "quantitative",
            "format": ".3s"
          }
        ]
      }
    }
  ],
  "config": {}
}